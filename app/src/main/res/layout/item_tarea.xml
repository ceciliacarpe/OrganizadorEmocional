<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="?attr/colorSecondary"
    android:backgroundTint="?attr/colorSecondary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Icono emocion asociada -->
        <ImageView
            android:id="@+id/imgEmocion"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Emoción" />

        <!-- Título de la tarea -->
        <TextView
            android:id="@+id/txtTituloTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:fontFamily="@font/neuehaasdisplayroman"
            app:layout_constraintStart_toEndOf="@id/imgEmocion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            />

        <!-- Descripción -->
        <TextView
            android:id="@+id/txtDescripcionTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666"
            android:fontFamily="@font/neuehaasdisplaylight"
            app:layout_constraintStart_toEndOf="@id/imgEmocion"
            app:layout_constraintTop_toBottomOf="@id/txtTituloTarea"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
